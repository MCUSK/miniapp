    <div class="wrapper">
      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= card.title %></span>
            </div>
            <div class="card-action">
              <%= link_to '詳細', "/cards/#{card.id}",:class =>"btn waves-effect waves-light", method: :get %>
              <% if user_signed_in? && card.user_id == current_user.id %>
              <%= link_to '編集', "/cards/#{card.id}/edit",:class =>"btn waves-effect waves-light", method: :get %>
              <%= link_to '削除', "/cards/#{card.id}",:class =>"btn waves-effect waves-light", method: :delete %>
              <% end%>
            </div>
          </div>
        </div>
      </div>
    </div>
