
      <div class="wrapper">
      <div class="row">
        <div class="col s12">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= @card.title %></span>
              <p><%= simple_format(@card.text) %></p><br>
              <hp class="right">by <%= @card.user.name %></p>
            </div>
              <% if user_signed_in? && @card.user_id == current_user.id %>
            <div class="card-action">
              <%= link_to '編集', "/cards/#{@card.id}/edit", method: :get, class:"btn" %>
              <%= link_to '削除', "/cards/#{@card.id}", method: :delete, class:"btn"%>
            </div>
              <% end %>
          </div>
                <a class="btn waves-effect waves-light" href="/">TOP</a>
        </div>
      </div>
    </div>
